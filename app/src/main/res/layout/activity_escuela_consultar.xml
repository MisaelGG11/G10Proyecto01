<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EscuelaConsultarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:orientation="vertical">

        <TextView
            android:text="@string/idEscuela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editIdEscuela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:labelFor="@+id/viewIdEscuela"
            android:textSize="18sp" />

        <TextView
            android:text="@string/acronimoEscuela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editAcronimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLength="7"
            android:inputType="textPersonName"
            android:labelFor="@+id/viewAcronimo"
            android:textSize="18sp" />

        <TextView
            android:text="@string/nombreEscuela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/editNombreEscuela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLength="50"
            android:inputType="textEmailAddress"
            android:labelFor="@+id/viewNombre"
            android:textSize="18sp" />

        <Button
            android:onClick="habilitarEdicion"
            android:id="@+id/btnActualizarEscuela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/actualizar" />

        <Button
            android:onClick="eliminarEscuela"
            android:id="@+id/btnEliminarEscuela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/eliminar" />

    </LinearLayout>

</LinearLayout>