<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocalInsertarActivity">


    <TextView
        android:id="@+id/textViewEdificio"
        android:layout_width="69dp"
        android:layout_height="51dp"
        android:layout_marginBottom="224dp"
        android:hint="@string/txtViewEdificio"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCrearLocal"
        app:layout_constraintEnd_toStartOf="@+id/spinnerEdificioLocal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.875" />

    <Spinner
        android:id="@+id/spinnerEdificioLocal"
        android:layout_width="219dp"
        android:layout_height="57dp"
        android:layout_marginTop="112dp"

        android:layout_marginEnd="60dp"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNombreLocal"
        android:layout_width="290dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/txtViewNombreLocal"
        android:inputType="textPersonName"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerEdificioLocal" />

    <EditText
        android:id="@+id/editTextCupoLocal"
        android:layout_width="290dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/txtViewCupoLocal"
        android:inputType="textPersonName"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreLocal" />

    <Button
        android:id="@+id/btnCrearLocal"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:background="@color/botones"
        android:text="@string/btnCrearLocal"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCancelarInsertarLocal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCupoLocal"
        app:layout_constraintVertical_bias="0.043" />

    <Button
        android:id="@+id/btnCancelarInsertarLocal"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="40dp"
        android:background="@color/botones"
        android:text="@string/btnCancelarLocal"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnCrearLocal"
        app:layout_constraintTop_toBottomOf="@+id/editTextCupoLocal" />


</androidx.constraintlayout.widget.ConstraintLayout>