<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventoEspecialInsertarActivity">

    <EditText
        android:id="@+id/editTextNombreEventoEspecial"
        android:layout_width="271dp"
        android:layout_height="53dp"
        android:layout_marginTop="60dp"
        android:textSize="18dp"
        android:ems="10"
        android:hint="@string/txtViewNombreEventoEspecial"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextFechaEventoEspecial"
        android:layout_width="267dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:ems="10"
        android:hint="@string/txtViewFechaEventoEspecial"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLocalidadEventoEspecial" />

    <EditText
        android:id="@+id/editTextTipoEventoEspecial"
        android:layout_width="270dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:ems="10"
        android:hint="@string/txtViewTipoEventoEspecial"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreEventoEspecial" />

    <EditText
        android:id="@+id/editTextLocalidadEventoEspecial"
        android:layout_width="266dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:ems="10"
        android:hint="@string/txtViewLocalidadEventoEspecial"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEdificioEventoEspecial" />

    <TextView
        android:id="@+id/textViewSeleccionarHorarioEventoEspecial"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:hint="@string/txtViewSeleccionarHorarioEventoEspecial"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCrearEventoEspecial"
        app:layout_constraintEnd_toStartOf="@+id/spinnerHorarioEventoEspecial"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFechaEventoEspecial"
        app:layout_constraintVertical_bias="0.312" />

    <Spinner
        android:id="@+id/spinnerHorarioEventoEspecial"
        android:layout_width="179dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="6dp"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewSeleccionarHorarioEventoEspecial"
        app:layout_constraintTop_toBottomOf="@+id/editTextFechaEventoEspecial" />

    <Button
        android:id="@+id/btnCrearEventoEspecial"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:background="@color/botones"
        android:text="@string/btnCrearEventoEspecial"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerHorarioEventoEspecial"
        app:layout_constraintVertical_bias="0.027" />

    <Button
        android:id="@+id/btnCancelarInsertarEventoEspecial"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="48dp"
        android:background="@color/botones"
        android:text="@string/btnCancelarEventoEspecial"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerHorarioEventoEspecial" />

    <EditText
        android:id="@+id/editTextEdificioEventoEspecial"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:ems="10"
        android:hint="@string/txtViewEdificioEventoEspecial"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTipoEventoEspecial" />

</androidx.constraintlayout.widget.ConstraintLayout>