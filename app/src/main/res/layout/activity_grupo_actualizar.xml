<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dip"
    android:stretchColumns="1">

    <TableRow>

        <TextView android:text="@string/idgrupo" />

        <EditText
            android:id="@+id/editidgh"
            android:inputType="text"
            android:maxLength="7"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </TableRow>

    <TableRow>

        <TextView android:text="@string/idoferta" />

        <EditText
            android:id="@+id/editidhorario"
            android:inputType="text"
            android:maxLength="30"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </TableRow>

    <TableRow>

        <TextView android:text="@string/numgrupo" />

        <EditText
            android:id="@+id/editidgrupo5"
            android:inputType="text"
            android:maxLength="30"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </TableRow>

    <TableRow>

        <TextView android:text="@string/tipogrupo" />

        <EditText
            android:id="@+id/edithorafin"
            android:inputType="text"
            android:maxLength="30"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </TableRow>

    <TableRow>

        <TextView android:text="@string/cupo" />

        <EditText
            android:id="@+id/editcupo3"
            android:inputType="text"
            android:maxLength="30"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </TableRow>

    <TableRow>

        <Button
            android:layout_width="171dp"
            android:onClick="actualizarGrupo"
            android:text="@string/actualizar" />

        <Button
            android:onClick="limpiarTexto"
            android:text="@string/limpiar" />
    </TableRow>
</TableLayout>
