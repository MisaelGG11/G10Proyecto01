<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="26dp"
    tools:context=".ServicioWeb8Activity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idlocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dip"
                android:text="@string/IdOpcionCrud" />

            <EditText
                android:id="@+id/editIdOpcion"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="6">

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dip"
                android:text="@string/descripcionOpcionCrud" />

            <EditText
                android:id="@+id/editDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:maxLength="30" />
        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="26dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_Opciones_Local"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/botonSW"
            android:onClick="insertarOpcionCrud2"
            android:text="@string/servicio_PHPlocal" />

        <Button
            android:id="@+id/btn_Opciones_Externo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/botonSW"
            android:onClick="insertarOpcionCrud2"
            android:text="@string/servicio_PHPexterno" />

    </LinearLayout>


</LinearLayout>