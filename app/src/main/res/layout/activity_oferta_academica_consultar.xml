<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OfertaAcademicaConsultarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:orientation="vertical">

        <TextView
            android:text="@string/id_oferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editIdOferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textSize="18sp" />

        <TextView
            android:text="@string/OfertaCiclo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spinnerOfertaCiclo"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:text="@string/ofertaDocente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spinnerOfertaDocente"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:text="@string/OfertaMateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerOfertaMateria"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <Button
            android:onClick="habilitarEdicion"
            android:id="@+id/btnActualizarOferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/actualizar" />

        <Button
            android:onClick="eliminarOferta"
            android:id="@+id/btnEliminarOferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/eliminar" />

    </LinearLayout>

</LinearLayout>